# ========================================
# INFLUMOJO UNIFIED ENVIRONMENT CONFIG
# ========================================
# This file uses influmojo.in domain for all environments
# Copy this to .env and customize as needed

# ========================================
# API CONFIGURATION
# ========================================
# Primary API endpoint - all API calls go through this
EXPO_PUBLIC_API_URL="https://api.influmojo.in"

# ========================================
# GOOGLE OAUTH CONFIGURATION
# ========================================
EXPO_PUBLIC_GOOGLE_CLIENT_ID="401925027822-qndr5bi6p3co47b19rjdtnd5pbm3fd59.apps.googleusercontent.com"
EXPO_PUBLIC_GOOGLE_CLIENT_ID_ANDROID="401925027822-8vnuv8dfjbjnc265fkihkk61qsoofnot.apps.googleusercontent.com"
EXPO_PUBLIC_GOOGLE_CLIENT_ID_IOS="401925027822-qndr5bi6p3co47b19rjdtnd5pbm3fd59.apps.googleusercontent.com"

# ========================================
# ZOHO INTEGRATION
# ========================================
# Chat widget configuration
EXPO_PUBLIC_ZOHO_CHAT_LICENSE="your_chat_license_key_here"
EXPO_PUBLIC_ZOHO_CHAT_DEPARTMENT="your_department_id_here"

# ========================================
# WEBHOOK & OAUTH ENDPOINTS
# ========================================
# These are automatically derived from API_BASE_URL but can be overridden
EXPO_PUBLIC_WEBHOOK_URL="https://webhook.influmojo.in"
EXPO_PUBLIC_AUTH_URL="https://auth.influmojo.in"
EXPO_PUBLIC_CHAT_URL="https://chat.influmojo.in"

# ========================================
# ENVIRONMENT FLAGS
# ========================================
# Set to 'development', 'staging', or 'production'
EXPO_PUBLIC_ENV="development"

# ========================================
# DEBUG CONFIGURATION
# ========================================
# Set to 'true' to enable debug logging
EXPO_PUBLIC_DEBUG="true" 