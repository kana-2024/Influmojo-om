{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SSMParameterStoreAccess",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameter",
        "ssm:GetParameters",
        "ssm:GetParametersByPath"
      ],
      "Resource": "arn:aws:ssm:ap-south-1:424592696132:parameter/influmojo/prod/api/*"
    },
    {
      "Sid": "KMSDecryptAccess",
      "Effect": "Allow",
      "Action": "kms:Decrypt",
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "kms:ViaService": "ssm.ap-south-1.amazonaws.com"
        }
      }
    },
    {
      "Sid": "SSMDescribeParameters",
      "Effect": "Allow",
      "Action": "ssm:DescribeParameters",
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "ssm:ParameterName": "influmojo/prod/api/*"
        }
      }
    }
  ]
}
